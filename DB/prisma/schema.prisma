generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:1234@localhost:3306/koreait"
}

model boards {
  id       Int        @id @default(autoincrement())
  author   String     @default("글쓴이") @db.VarChar(100)
  title    String     @db.VarChar(100)
  contents String     @db.Text
  comments comments[]
}

model comments {
  id       Int     @id @default(autoincrement())
  author   String  @default("댓글러") @db.VarChar(100)
  comments String  @db.VarChar(300)
  board_id Int?
  boards   boards? @relation(fields: [board_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "comments_ibfk_1")

  @@index([board_id], map: "board_id")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model employees {
  id          Int                    @id @default(autoincrement())
  name        String                 @db.VarChar(50)
  gender      employees_gender?
  salary      Int
  departments employees_departments?
  position    employees_position?
}

model japan {
  id           Int                @id @default(autoincrement())
  name         String             @db.VarChar(50)
  age          Int
  purpose      japan_purpose
  depature     japan_depature
  destination  japan_destination?
  periodOfStay Int?
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model students {
  id     Int             @id @default(autoincrement())
  name   String          @db.VarChar(50)
  age    Int             @default(20)
  gender students_gender
  phone  String          @unique(map: "phone") @db.VarChar(50)
}

model users {
  id       String @id @db.VarChar(30)
  password String @db.VarChar(100)
  nickname String @db.VarChar(30)
}

enum employees_gender {
  male
  female
}

enum japan_purpose {
  tourism
  business
  other
}

enum students_gender {
  male
  female
}

enum employees_departments {
  marketing
  IT
  advertising
  design
  finance
}

enum japan_depature {
  incheon
  gimpo
  busan
  jeju
}

enum employees_position {
  intern
  assistant
  manager
  header
}

enum japan_destination {
  tokyo
  osaka
  fukuoka
  saporo
}
